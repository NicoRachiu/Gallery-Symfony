{% extends 'base.html.twig' %}

{% block title %}{{ photo.title }}{% endblock %}

{% block body %}
    <style>
        /* styles.css */

        /* Container */
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        /* Content Styling */
        .content {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        /* Responsive Image */
        .img-responsive {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
        }

        /* Comments Section */
        .comment-list {
            list-style-type: none;
            padding: 0;
        }

        .comment-list .comment {
            margin-bottom: 15px;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .comment-list .comment strong {
            display: block;
            margin-bottom: 5px;
        }

        /* Form Styling */
        .comment-form {
            margin-top: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .btn-submit {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-submit:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="container">
        <div class="content">
            <h1>{{ photo.title }}</h1>
            <img src="{{ photo.imagePath }}" alt="{{ photo.title }}" class="img-responsive">
            <p>{{ photo.description }}</p>

            <h2>Comments</h2>
            <ul class="comment-list">
                {% for comment in photo.comments %}
                    <li class="comment">
                        <strong>{{ comment.user.username }}:</strong>
                        <p>{{ comment.content }}</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}